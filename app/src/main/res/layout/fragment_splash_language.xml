<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/txt_lang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Choose_your_language"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/ic_rus"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_russian"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_lang"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_rus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Русский"
                android:textSize="18sp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toEndOf="@+id/ic_rus"
                app:layout_constraintTop_toBottomOf="@+id/txt_lang"/>

            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:background="#E9E9E9"
                app:layout_constraintTop_toBottomOf="@+id/txt_rus"
                app:layout_constraintStart_toEndOf="@+id/ic_rus"/>

            <ImageView
                android:id="@+id/ic_use"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_america"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/ic_rus"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="18sp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="42dp"
                app:layout_constraintStart_toEndOf="@+id/ic_use"
                app:layout_constraintTop_toBottomOf="@+id/txt_rus"/>

            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:background="#E9E9E9"
                app:layout_constraintTop_toBottomOf="@+id/txt_use"
                app:layout_constraintStart_toEndOf="@+id/ic_use" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>