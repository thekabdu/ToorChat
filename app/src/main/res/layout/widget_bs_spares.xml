<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="kz.diaspora.app.domain.model.PostModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_rounded"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <View
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/line_rounded_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/spares"
            android:textColor="@color/default_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_CFC2C2" />

        <LinearLayout
            android:id="@+id/ll_auto_parts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/auto_parts"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_right_grey"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_CFC2C2" />

        <LinearLayout
            android:id="@+id/ll_tires"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/tires"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_right_grey"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_CFC2C2" />

        <LinearLayout
            android:id="@+id/ll_disks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/disks"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_right_grey"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_CFC2C2" />

        <LinearLayout
            android:id="@+id/ll_consumables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/consumables"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_right_grey"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_CFC2C2" />

        <LinearLayout
            android:id="@+id/ll_accessories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/accessories"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_right_grey"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_CFC2C2" />

        <LinearLayout
            android:id="@+id/ll_multimedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/multimedia"
                android:textColor="@color/default_text_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_arrow_right_grey"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</layout>